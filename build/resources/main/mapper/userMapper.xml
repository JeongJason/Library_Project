<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.mapper.UserMapper">

    <select id="findByUid" resultType="userDTO">
        SELECT * FROM TBL_USER WHERE USER_ID=#{userId}
    </select>

    <select id="findAll" resultType="userDTO">
        SELECT * FROM TBL_USER
    </select>

    <insert id="register">
        INSERT INTO TBL_USER(USER_ID,USER_PW,USER_NAME,USER_EMAIL,USER_BIRTH,USER_ROLE, EMAIL_PREFIX, EMAIL_DNS)
        VALUES(#{userId}, #{userPw}, #{userName}, #{userEmail}, #{userBirth}, #{userRole}, #{emailPrefix},#{emailDns})
    </insert>

    <delete id="delete">
        DELETE FROM TBL_USER WHERE USER_ID=#{userId}
    </delete>

    <update id="update">
        UPDATE TBL_USER
        SET USER_PW = #{userPw}, USER_EMAIL = #{userEmail}
        WHERE USER_ID = #{userId}
    </update>

<!-- 아이디 중복검사   -->
    <select id="idCheck" resultType="int">
        SELECT COUNT(*) FROM TBL_USER WHERE USER_ID = #{userId}
    </select>
</mapper>